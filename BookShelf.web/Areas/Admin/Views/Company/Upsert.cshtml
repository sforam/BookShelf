@model company

<div class="card shadow border-0 my-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3 ">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">
                    @(Model.Id != 0 ? "Update" : "Create")

                    Company
                </h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">

        <form method="post" class="row" enctype="multipart/form-data">

            <input asp-for="Id" hidden />

           

            <div class="row">
                <div class="col-12">
                    <div class="border p-3 mt-4">


                        @* <div asp-validation-summary="ModelOnly"  ></div>*@
                        <div class="form-floating py-2 col-12">
                            <input asp-for="Name" type="text" class="form-control border-0 shadow" />
                            <label class="ms-2" asp-for="Name">
                                Name <span class="text-danger">*</span>
                            </label>

                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                     
                        @* <div class="form-floating py-2 col-12">
                            <input asp-for="PhoneNumber" type="number" class="form-control border-0 shadow" />
                            <label class="ms-2" asp-for="PhoneNumber">
                                Phone Number
                                <span class="text-danger">*</span>
                            </label>
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div> *@
                        <div class="form-floating py-2 col-12">
                            <input asp-for="StreetAddress" type="text" class="form-control border-0 shadow" />
                            <label class="ms-2" asp-for="StreetAddress">
                                Street Address
                                <span class="text-danger">*</span>
                            </label>

                            <span asp-validation-for="StreetAddress" class="text-danger"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <input asp-for="State" type="text" class="form-control border-0 shadow" />
                            <label class="ms-2" asp-for="State">
                                State
                                <span class="text-danger">*</span>
                            </label>

                            <span asp-validation-for="State" class="text-danger"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <input asp-for="City" type="text" class="form-control border-0 shadow" />
                            <label class="ms-2" asp-for="City">
                                City
                                <span class="text-danger">*</span>
                            </label>
                            <span asp-validation-for="City" class="text-danger"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <input asp-for="PostalCode" type="number" class="form-control border-0 shadow" />

                            <label class="ms-2" asp-for="PostalCode">
                                Postal Code
                                <span class="text-danger">*</span>
                            </label>

                            <span asp-validation-for="PostalCode" class="text-danger"></span>
                        </div>
                      
                     



                    








                        <div class="row pt-2">
                            <div class="col-6 col-md-3">

                                @if (Model.Id != 0)
                                {

                                    <button type="submit" class="btn btn-primary form-control" style="width:150px">Update</button>

                                }
                                else
                                {
                                    <button type="submit" class="btn btn-primary form-control" style="width:150px">Create</button>

                                }

                            </div>
                            <div class="col-6 col-md-3">
                                <a asp-controller="Company" asp-action="List" class="btn btn-outline-primary border form-control">
                                    Back to List
                                </a>
                            </div>
                        </div>


                    </div>

                </div>
               
            </div>



        </form>



    </div>

</div>



@section Scripts
{


    <script>
        tinymce.init({
            selector: 'textarea',
            plugins: 'anchor autolink charmap codesample emoticons lists table visualblocks wordcount checklist media casechange export formatpainter pageembed linkchecker a11ychecker tinymcespellchecker permanentpen powerpaste advtable advcode editimage advtemplate ai mentions tinycomments tableofcontents footnotes mergetags autocorrect typography inlinecss markdown',
            toolbar: 'undo redo | blocks fontfamily fontsize | bold italic underline strikethrough | addcomment showcomments | spellcheckdialog a11ycheck typography | align lineheight | checklist numlist bullist indent outdent',
            tinycomments_mode: 'embedded',
            tinycomments_author: 'Author name',
            ai_request: (request, respondWith) => respondWith.string(() => Promise.reject("See docs to implement AI Assistant")),

        });
    </script>



    @{
        <partial name="_ValidationScriptsPartial" />
    }


}
