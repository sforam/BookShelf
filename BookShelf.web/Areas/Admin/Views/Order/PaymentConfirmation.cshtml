@model int
<div class="container row pt-4">
    <div class="col-12 text-center">
        <h1 class="text-primary text-center">Payment Successfully!</h1>
        Your Order Number is:@Model <br /> <br />
        <img src="~/images/success.png" width="20%" />
    </div>
    <div class="col=12 text-center" style="color:maroon">
        <br />
        Payment has been applied successfully! <br />
        <a asp-area="Admin" 
        asp-action="Details"
        asp-controller="Order" 
        asp-route-orderId="@Model" 
        class="btn btnbtn-primary">Back to Order Details</a>
    </div>
</div>