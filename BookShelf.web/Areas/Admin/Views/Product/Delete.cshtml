@{
}

@model BookShelf.Models.Product

<div class="card shadow border-0 my-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3 ">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Delete Category</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">

        <form method="post">
            <div class="border p-3 mt-4">


                @* <div asp-validation-summary="ModelOnly"  ></div>*@
                <div class="form-floating py-2 col-12">
                    <input asp-for="Title" type="text" disabled class="form-control border-0 shadow" />
                    <label class="ms-2" asp-for="Title">
                        Title <span class="text-danger">*</span>
                    </label>

                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <textarea asp-for="Description" type="text" disabled class="form-control border-0 shadow"></textarea>
                    <label class="ms-2" asp-for="Description">
                        Description <span class="text-danger">*</span>
                    </label>

                    <span asp-validation-for="Description" disabled class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="ISBN" type="text" disabled class="form-control border-0 shadow" />
                    <label class="ms-2" asp-for="ISBN">
                        ISBN
                        <span class="text-danger">*</span>
                    </label>
                    <span asp-validation-for="ISBN" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Author" type="text" disabled class="form-control border-0 shadow" />
                    <label class="ms-2" asp-for="Author">
                        Author
                        <span class="text-danger">*</span>
                    </label>

                    <span asp-validation-for="Author" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="ListPrice" type="number" disabled class="form-control border-0 shadow" />
                    <label class="ms-2" asp-for="ListPrice">
                        ListPrice
                        <span class="text-danger">*</span>
                    </label>

                    <span asp-validation-for="ListPrice" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Price" type="number" disabled class="form-control border-0 shadow" />
                    <label class="ms-2" asp-for="Price">
                        Price
                        <span class="text-danger">*</span>
                    </label>
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Price50" type="number" disabled class="form-control border-0 shadow" />

                    <label class="ms-2" asp-for="Price50">
                        Price 50
                        <span class="text-danger">*</span>
                    </label>

                    <span asp-validation-for="Price50" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Price100" type="number" disabled class="form-control border-0 shadow" />
                    <label class="ms-2" asp-for="Price100">
                        Price 100
                    </label>
                    <span asp-validation-for="Price100" class="text-danger"></span>
                </div>


                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-primary form-control" style="width:150px">Delete</button>

                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Product" asp-action="List" class="btn btn-outline-primary border form-control ">
                            Back to List
                        </a>
                    </div>

                </div>


            </div>





        </form>

    </div>

</div>


@section Scripts
{
    @{
        <partial name="_ValidationScriptsPartial" />
    }


}

