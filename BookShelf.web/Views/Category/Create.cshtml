@model BookShelf.web.Models.Category.category
<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Create Category </h2>
            <hr />

        </div>
        <div class="mb-3 p-1">
            <label class="p-0">Category Name</label>
            <input type="text" class="form-control" />
        </div>
