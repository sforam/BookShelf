@model BookShelf.web.Models.Category.category
<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Edit Category </h2>
            <hr />

        </div>

        @* <div asp-validation-summary="ModelOnly"  ></div>*@
        <div class="mb-3 p-1">
            <label class="p-0" asp-for="Name"></label>
            <input asp-for="Name" type="text" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3 p-1">
            <label class="p-0" asp-for="DisplayOrder"></label>
            <input asp-for="DisplayOrder" type="text" class="form-control" />
            <span asp-validation-for="DisplayOrder" class="text-danger"></span>
        </div>

        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-primary" style="width:150px">Update</button>

            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Category" asp-action="List" class="btn btn-secondary" style="width:150px;">
                    Back to List
                </a>
            </div>
        </div>


    </div>

</form>



@section Scripts
{
    @{
        <partial name="_ValidationScriptsPartial" />
    }


}

