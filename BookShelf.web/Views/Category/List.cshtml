@{
}
@model List<BookShelf.web.Models.Category.category>

<h1>List Categories</h1>

<table class="table">
	<thead>
		<tr>
			<th>Id</th>
			<th>Name</th>
			<th>Category</th>
			<th>Edit</th>
			<th>Delete</th>
		</tr>

	</thead>
	<tbody>
		@foreach (var category in Model.OrderBy(u=>u.DisplayOrder))
		{
			<tr>
				<td>@category.Id</td>
				<td>@category.Name</td>
				<td>@category.DisplayOrder</td>

				<td><a href="#" class="btn btn-primary"><i class="fa-solid fa-pen"></i>Edit</a></td>
				<td><a href="#" class="btn btn-primary"><i class=""></i>Delete</a></td>

			</tr>
		}
	</tbody>
</table>
