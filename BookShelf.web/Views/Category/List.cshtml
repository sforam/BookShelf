@model List<BookShelf.web.Models.Category.category>


<div class="container">
	<div class="row pt-4 pb-3">
		<div class="col-6">
			<h1>List Categories</h1>
		</div>



		<div class="col-6 text-end">
			<a asp-controller="Category" asp-action="Create" class="btn btn-primary">
			<i class="fa-solid fa-plus"></i> Create New Category

			</a>
		</div>
	
	</div>
	

</div>


<table class="table">
	<thead>
		<tr>
			<th>Id</th>
			<th>Name</th>
			<th>Display Order</th>
			<th> </th>
			
		</tr>

	</thead>
	<tbody>
		@foreach (var category in Model.OrderBy(u=>u.DisplayOrder))
		{
			<tr>
				<td>@category.Id</td>
				<td>@category.Name</td>
				<td>@category.DisplayOrder</td>

				<td>

					<div class="w-75 btn-group" role="group">
						<a asp-controller="Category" asp-action="Edit" asp-route-id="@category.Id"  class="btn btn-primary mx-2"><i class="fa-solid fa-pen-to-square"></i>Edit
						</a>

						<a asp-controller="Category" asp-action="Delete" asp-route-id="@category.Id" class="btn btn-danger mx-2">
							<i class="fa-solid fa-trash"></i>Delete
						</a>



					</div>
				</td>
				
			</tr>
		}
	</tbody>
</table>
