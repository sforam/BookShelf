@page
@model BookShelf_Razor.Pages.Categories.ListModel
@{
}





<div class="container">
	<div class="row pt-4 pb-3">
		<div class="col-6">
			<h1>List Categories</h1>
		</div>



		<div class="col-6 text-end">
			<a asp-page="/Categories/Create" class="btn btn-primary">
				<i class="fa-solid fa-plus"></i> Create New Category

			</a>
		</div>

	</div>


</div>


<table class="table">
	<thead>
		<tr>
			<th>Id</th>
			<th>Name</th>
			<th>Display Order</th>
			<th> </th>

		</tr>

	</thead>
	<tbody>
		@foreach (var category in Model.CategoryList.OrderBy(u => u.DisplayOrder))
		{
			<tr>
				<td>@category.Id</td>
				<td>@category.Name</td>
				<td>@category.DisplayOrder</td>

				<td>

					<div class="w-75 btn-group" role="group">
						<a asp-page="/Categories/Edit"  asp-route-id="@category.Id" class="btn btn-primary mx-2">
							<i class="fa-solid fa-pen-to-square"></i>Edit
						</a>

						<a asp-page="/Categories/Delete"  asp-route-id="@category.Id" class="btn btn-danger mx-2">
							<i class="fa-solid fa-trash"></i>Delete
						</a>



					</div>
				</td>

			</tr>
		}
	</tbody>
</table>
